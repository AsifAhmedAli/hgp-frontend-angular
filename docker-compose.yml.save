version: '2'
services:
  hgp:
    build: 
      context: .
      dockerfile: ./.docker/Dockerfile
    restart: always
    command: sh -c
         "npm run build:ssr
          && npm run serve:ssr"
    ports:
      - ${APP_PORT}:8003      
    container_name: ${CONTAINER_NAME}
    working_dir: /var/www
    volumes:
      - ./:/var/www
      - node_modules:/var/www/node_modules
volumes:
  node_modules:
networks:
  default:
    driver: bridge
